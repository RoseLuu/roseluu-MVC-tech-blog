<div class='post'>
    <article class='card'>
    <div class="card-header">
    <h2>{{post.title}}</h2>
    <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
    </div>
    </div>
    <div class="card-body">
        {{post.content}}
    </div>
    </article>
    
</div>