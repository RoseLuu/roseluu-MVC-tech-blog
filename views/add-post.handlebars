<div class="post card">
  <div class="card-header">
    <h2>New Post</h2>
  </div>
  <form id="add-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input
      type="text"
      name="post-title"
      id="post-title"
      class="form-input"
      placeholder="Title"
    />

    <label class="form-label" for="content">Content</label>
    <textarea
      name="content"
      class="form-input"
      id="post-content"
      placeholder="Content"
    ></textarea>

    <button type="submit" class="btn btn-lg btn-info mb-3">Create</button>
  </form>
</div>

<script src="/js/add-post.js"></script>