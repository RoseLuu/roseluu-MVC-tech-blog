<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input
      type="text"
      name="post-title"
      id="title"
      class="form-input"
      value="{{post.title}}"
    />

    <label class="form-label" for="content">Content</label>
    <textarea
      name="content"
      id="content"
      class="form-input"
    >{{post.content}}</textarea>
    <button
      type="submit"
      class="btn btn-lg btn-info mb-3"
      id="edit-btn"
    >Edit</button>
    <button
      type="submit"
      class="btn btn-lg btn-info mb-3"
      id="delete-btn"
    >Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>