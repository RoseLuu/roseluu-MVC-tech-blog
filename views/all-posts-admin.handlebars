<div class="posts list-group">
  {{#each posts}}
    <a
      class="list-item flex-row justify-space-between"
      href="/dashboard/edit/{{id}}"
    >
      <div class="card-header">
        <span>{{title}}</span>
      </div>
      <div class="card-body">
        <span>{{content}}</span>
      </div>
      <div class="card-footer">
        <span>{{format_date created_at}}</span>
      </div>
    </a>
  {{/each}}
</div>